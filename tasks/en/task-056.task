DESCRIPTION {
    Which wizards are taught by Anna?
}

ANSWER {
   SELECT w.name FROM Wizards w, Lessons l  WHERE l.teacher_id = (SELECT w.id FROM Wizards w WHERE w.name = "Anna") and  l.pupil_id = w.id
}


