 }

ANSWER {
    SELECT child.fname child_fn, child.name child_name, parent.fname parent_fn, parent.name parent_name
    FROM person child INNER JOIN 
        person parent ON (child.parent = parent.person_id)
    WHERE child.fname = 'Marie';
}

