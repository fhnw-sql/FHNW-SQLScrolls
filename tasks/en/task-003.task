DESCRIPTION {
    In which year was Sieglinde born?
}

PARSONS {
    SELECT year
    FROM GHOSTS
    WHERE 
    name = "Sieglinde"
    name IS "Sieglinde" #distractor
    FILTER #distractor
    SEARCH #distractor
}

ANSWER {
   SELECT year from ghosts where name ="Sieglinde"
}


