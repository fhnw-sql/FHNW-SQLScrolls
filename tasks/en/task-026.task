DESCRIPTION {
   For each area that the wizards inhabit, show the number of wizards who live there.
}

PARSONS {
     SELECT 
     AREA, 
     COUNT(*)
     FROM WIZARDS
     GROUP BY
     AREA
     COUNT OF WIZARDS #distractor
     SUM (*) #distractor
}

ANSWER {
      SELECT Area, COUNT(*) FROM WIZARDS GROUP BY AREA  
}

