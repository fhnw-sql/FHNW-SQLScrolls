            Values (502, 'Tick', 'Duck', 'Blumenweg', 'Entenhausen', 41, 501);
            Insert Into Person (person_id, Fname, Name, Street, City, Books, Parent)
            Values (503, 'Trick', 'Duck', 'Blumenweg', 'Entenhausen', 45, 501);
