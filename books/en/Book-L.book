PAGE {
    <h3> Person Data Table </h3>

    EXAMPLE {
        SQL {
            CREATE TABLE PERSON(
                PERSON_ID              INTEGER PRIMARY KEY AUTOINCREMENT,
                FNAME                  TEXT,
                NAME                   TEXT,
                STREET                 TEXT,
                CITY                   TEXT,
                BOOKS                  INTEGER,
                PARENT                 INTEGER
            ) ;

            Insert Into Person (person_id, Fname, Name, Street, City, Books, Parent)
            Values (501, 'Donald', 'Duck', 'Blumenweg', 'Entenhausen', 5, Null);
